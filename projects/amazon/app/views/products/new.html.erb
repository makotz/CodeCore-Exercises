<h1>Create New Product</h1>

<%= form_for @product do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :price %>
    <%= f.text_area :price %>
  </div>
  <div>
  <%= f.collection_select :category_id, Category.all, :id , :name %>
</div>
  <%= f.submit %>
<% end %>
